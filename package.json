{
  "name": "mapling",
  "version": "0.1.0",
  "description": "MapleStory Idle - 메이플스토리 방치형 사냥 게임",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "fetch-items": "tsx fetch-items.ts",
    "fetch-maps": "tsx fetch-maps.ts",
    "fetch-mobs": "tsx fetch-mobs.ts",
    "fetch-map-all": "tsx fetch-map-all.ts",
    "build:electron": "npm run build && electron-builder",
    "build:electron:mac": "npm run build && electron-builder --mac",
    "build:electron:win": "npm run build && electron-builder --win",
    "build:electron:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.mapling.app",
    "productName": "Mapling",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "pixi.js": "^8.6.6",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "mysql2": "^3.16.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-electron": "^0.29.0"
  }
}
